@model AbbyWeb.Pages.Category.CreateModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@* @model AbbyWeb.Model.Category *@

@{
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Create Category</h2>
                <hr/>
            </div>
            <div class="mb-3">
                <label asp-for="Category.Name"></label>
                <input type="text" name="name" class="form-control" asp-for="Category.Name"/>
            </div>
            <div class="mb-3">
                <label asp-for="Category.DisplayOrder"></label>
                <input type="text" name="displayOrder" class="form-control" asp-for="Category.DisplayOrder"/>
                @* <span class="text-danger" asp-validation-for="Category.DisplayOrder"></span> *@
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        </div>
    </form>
</div>
</body>
</html>